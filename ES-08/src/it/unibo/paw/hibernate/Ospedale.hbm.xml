<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.Ospedale" table="ospedale">
		<id name="id" column="id">
			<!-- <generator class="native"/> -->
		</id>
		
		<property name="codiceOspedale" column="codiceOspedale" />
		<property name="nome" column="nome" />
		<property name="citta" column="citta" />
		<property name="indirizzo" column="indirizzo" />

		<set name="tipiAccertamento" table="ospedale_tipoaccertamento" inverse="true" lazy="true">
			<key column="idOspedale" />
			<many-to-many column="idTipoAccertamento" class="it.unibo.paw.hibernate.tipoAccertamento" />
		</set>
	</class>
</hibernate-mapping>