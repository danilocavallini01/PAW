<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.MaterialeFisico" table="materiale_fisico">
		<id name="id" column="id">
			<!-- <generator class="native"/> -->
		</id>
		<property name="codiceMateriale" column="codiceMateriale" />
		<property name="nome" column="nome" />
		<property name="descrizione" column="descrizione" />
		<property name="dataCreazione" column="dataCreazione" />

		<set name="oggetti" table="oggetto_digitale" inverse="true" fetch="select">
			<key>
				<column name="materiale_id" not-null="true" />
			</key>
			<one-to-many class="it.unibo.paw.hibernate.OggettoDigitale" />
		</set>
		
		<many-to-one name="archivio" class="it.unibo.paw.hibernate.ArchivioFisico">
			<column name="archivio_id" not-null="true"></column>
		</many-to-one>

	</class>
</hibernate-mapping>