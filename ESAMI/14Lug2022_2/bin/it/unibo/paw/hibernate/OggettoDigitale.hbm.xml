<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.unibo.paw.hibernate.OggettoDigitale" table="oggetto_digitale">
		<id name="id" column="id">
			<!-- <generator class="native"/> -->
		</id>
		<property name="codiceOggetto" column="codiceOggetto" />
		<property name="nome" column="nome" />
		<property name="formato" column="formato" />
		<property name="dataDigitalizzazione" column="dataDigitalizzazione" />
		
		<many-to-one name="materiale" class="it.unibo.paw.hibernate.MaterialeFisico">
			<column name="materiale_id" not-null="true"></column>
		</many-to-one>
	</class>
</hibernate-mapping>